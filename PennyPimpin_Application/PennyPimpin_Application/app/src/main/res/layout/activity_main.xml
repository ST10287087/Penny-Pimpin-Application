<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".MainActivity">




    <!-- Intro message -->

    <!-- Login Button -->

    <TextView
        android:id="@+id/opening_catchphrase"
        android:layout_width="360dp"
        android:layout_height="69dp"
        android:ellipsize="none"
        android:maxLines="3"
        android:padding="8dp"
        android:text="Now your finances are in one place and always under control"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.566" />

    <TextView
        android:id="@+id/language_intro"
        android:layout_width="329dp"
        android:layout_height="62dp"
        android:ellipsize="none"
        android:maxLines="3"
        android:padding="8dp"
        android:text="Select your language preference!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.448" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="366dp"
        android:layout_height="59dp"
        android:backgroundTint="@color/black"
        android:text="Login"
        android:textColor="#FFFFFF"

        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.682" />
    <!-- Register button -->
    <Button
        android:id="@+id/register_button"
        android:layout_width="367dp"
        android:layout_height="59dp"
        android:backgroundTint="@color/black"
        android:text="Register"
        android:textColor="#FFFFFF"

        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.826" />

    <!-- PennyPimpin Logo -->

    <!-- Language Buttons -->
    <ImageView
        android:id="@+id/logo_welcome_page"
        android:layout_width="254dp"
        android:layout_height="222dp"
        android:src="@drawable/pennyboii_removebg_preview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/language_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/logo_welcome_page"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <!-- /**
              Attribution:
              Video:
             button event clicker â€“ YouTube.

              Author/Channel: Atif Pervaiz
              Title: "Button Click Event | Android Studio | Kotlin"
              URL:https://youtu.be/QmEjLiR2rGU?si=2eMzt9CJKMWOHMDR
              Accessed on: 2025-06-04
              */-->
        <Button
            android:id="@+id/btn_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:backgroundTint="#173679"/>

        <Button
            android:id="@+id/btn_afrikaans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Afrikaans"
            android:backgroundTint="#406a28"/>

        <Button
            android:id="@+id/btn_isizulu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IsiZulu"
            android:backgroundTint="#dd7b00"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>