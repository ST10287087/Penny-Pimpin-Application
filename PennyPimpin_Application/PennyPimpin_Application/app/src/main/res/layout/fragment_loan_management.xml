<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <!-- White Card Box -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:backgroundTint="@android:color/white"
        app:cardCornerRadius="12dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="16dp">

        <!-- Loan Amount -->
        <EditText
            android:id="@+id/etLoanAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Loan Amount"
            android:inputType="numberDecimal"
            android:minHeight="48dp" />

        <!-- Interest Rate -->
        <EditText
            android:id="@+id/etInterestRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Interest Rate (%)"
            android:inputType="numberDecimal"
            android:minHeight="48dp" />

        <!-- Start Date -->
        <EditText
            android:id="@+id/etStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:focusable="false"
            android:hint="Start Date (YYYY-MM-DD)"
            android:minHeight="48dp" />

        <!-- Duration -->
        <EditText
            android:id="@+id/etDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Duration (months)"
            android:inputType="number"
            android:minHeight="48dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmitLoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate Repayment"
            android:layout_marginTop="20dp" />

        <!-- Monthly Repayment Display -->
        <TextView
            android:id="@+id/tvMonthlyRepayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly Repayment: R0.00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />
    </LinearLayout>
    </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tvLoanHistoryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loan History"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvLoans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>